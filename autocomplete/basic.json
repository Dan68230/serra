{
  "$schema": "http://json-schema.org/draft-08/schema#",
  "$id": "http://www.serra.io",
  "type": "object",
  "properties": {
    "job_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "debug": {
      "type": "boolean"
    }
  },
  "patternProperties": {
    "^step": {
      "type": "object",
      "properties": {
        "class_name": {
          "type": "string",
          "enum": ["AddColumn", "CaseWhen", "CastColumn", "DropColumns", "GetCount", "Join", "Map", "Pivot", "RenameColumn", "LocalReader", "LocalWriter", "S3Reader", "S3Writer"]
        },
        "input_node": {
          "type": "string"
        },
        "config": {
          "type": "object"
        }
      }
    }
  }
}