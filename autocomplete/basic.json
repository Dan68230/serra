{
  "$schema": "http://json-schema.org/draft-08/schema#",
  "$id": "http://www.serra.io",
  "type": "object",
  "properties": {
    "job_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "debug": {
      "type": "boolean"
    }
  },
  "patternProperties": {
    "^step": {
      "type": "object",
      "properties": {
        "class_name": {
          "type": "string",
          "enum": ["AddColumnTransformer", "CaseWhenTransformer", "CastColumnTransformer", "DropColumnsTransformer", 
                  "GetCountTransformer", "JoinTransformer", "MapTransformer", "PivotTransformer", "RenameColumnTransformer", 
                  "LocalReader", "LocalWriter", "S3Reader", "S3Writer",
                  "DatabricksWriter", "DatabricksReader"]
        },
        "input_node": {
          "type": "string"
        },
        "config": {
          "type": "object"
        }
      }
    }
  }
}